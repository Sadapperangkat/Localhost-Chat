<?php

$message_text = "Halo-kisanak";
$secret_token = "7140450573:AAEoOjiCKok7l0z27RKd5oennKYzCZ0INRs";

    $url = "https://api.telegram.org/bot" . $secret_token . "sendMessage?parse_mode=markdown&chat_id=5959881570";
